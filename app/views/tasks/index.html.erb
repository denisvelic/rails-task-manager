<div class="container"><h1>All tasks</h1>
<div>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to "#{task.title}", task_path(task) %> - <%= link_to "Delete task", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>
</div>


<%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
</div>
